{
    "name": "Block Blob",
    "description": "A CSP blocker for blob URIs",
    "version": "1.0.0",
    "manifest_version": 3,
    "minimum_chrome_version": "96",
    "offline_enabled": true,
    "permissions": [
        "tabs",
        "webRequest",
        "debugger",
        "scripting"
    ],
    "background": {
        "service_worker": "background.bundle.js"
    },
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "match_about_blank": true,
            "js": ["test.bundle.js"]
        }
    ]
}